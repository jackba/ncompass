<?xml version="1.0" encoding="utf-8"?>


    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical">
	
	<TextView
		android:id="@+id/place_title"
		android:layout_width="fill_parent"	
		android:layout_height="wrap_content"
		android:textAlign="center"
				
		android:textColor="#f99f00"			
		android:textStyle="bold"
		android:textSize="18sp"
	/>	
	
	
	<RelativeLayout 	    
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:layout_weight="1">
	    
	    <!--
	    <ImageView 
	    	android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scaleType="fitCenter"
	    	android:id="@+id/place_image"
	    />
	    -->

	    <View 
	    	android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scaleType="fitCenter"
	    	android:background="#66000000"
			android:id="@+id/place_overlay"
	    />


		<info.nymble.ncompass.view.TargetCompass
		    android:layout_width="fill_parent"
		    android:layout_height="220dip"
		    android:layout_centerInParent="true"
		    android:id="@+id/compass" />
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
		android:gravity="bottom">
	    

		<LinearLayout
			android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			
			<TextView
				android:id="@+id/place_target"
				android:layout_width="fill_parent"	
				android:layout_height="wrap_content"
				android:textAlign="start"
	
				android:textColor="#f99f00"			
				android:typeface="monospace"
				android:textStyle="bold"
				android:textSize="12sp"
			/>
			
			<TextView
				android:id="@+id/place_bearing"
				android:layout_width="fill_parent"	
				android:layout_height="wrap_content"
				android:textAlign="start"
	
				android:textColor="#f99f00"			
				android:typeface="monospace"
				android:textStyle="bold"
				android:textSize="12sp"
			/>
		</LinearLayout>
		
		
					
		<TextView
			android:id="@+id/place_distance"
			android:layout_width="fill_parent"	
			android:layout_height="wrap_content"
			android:textAlign="center"
			android:layout_weight="1"

			android:textColor="#f99f00"			
			android:typeface="monospace"
			android:textStyle="bold"
			android:textSize="20sp"
		/>
		
		
		<LinearLayout
			android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:orientation="vertical">

			<TextView
				android:id="@+id/place_speed"
				android:layout_width="fill_parent"	
				android:layout_height="wrap_content"
				android:textAlign="end"
			
				android:textColor="#f99f00"			
				android:typeface="monospace"
				android:textStyle="bold"
				android:textSize="12sp"
			/>	
			
			
			<TextView
				android:id="@+id/place_eta"
				android:layout_width="fill_parent"	
				android:layout_height="wrap_content"
				android:textAlign="end"
			
				android:textColor="#f99f00"			
				android:typeface="monospace"
				android:textStyle="bold"
				android:textSize="12sp"
			/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>


