<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.nymble.ncompass">


    <application android:theme="@style/Theme" >
    	

		<provider class="PlaceBookProvider"
	            android:authorities="info.nymble.ncompass.placebook" />


    	<activity 
    		class=".activities.PlaceListActivity" 
    		android:label="@string/placebook_title"
    		android:icon="@drawable/icon_placebook">
    		
            <intent-filter>
                <action android:value="android.intent.action.MAIN" />
                <category android:value="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity 
        	class=".activities.TargetCompassActivity" 
        	android:label="@string/target_compass_title"
        	android:icon="@drawable/icon_compass">
        	
            <intent-filter>
                <action android:value="android.intent.action.MAIN" />
                <category android:value="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>




     	<activity class=".activities.DummyActivity"  android:label="Dummy Activity"/>
     	<activity class=".activities.SignpostActivity"  android:label="Signpost Activity"/>
     	
		<activity class=".activities.AddListActivity" android:label="@string/new_list_title">
            <intent-filter>
                <action android:value="android.intent.action.ADD" />
                <category android:value="android.intent.category.DEFAULT" />
                <type android:value="vnd.android.cursor.dir/vnd.info.nymble.location" />
            </intent-filter>
        </activity>
    </application>
</manifest> 